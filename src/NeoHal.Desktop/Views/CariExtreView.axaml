                    <DataGridTextColumn Header="Tutar" Width="120" MinWidth="80" 
                                        Binding="{Binding Tutar, StringFormat=N2}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <!-- Alt Ã–zet -->
