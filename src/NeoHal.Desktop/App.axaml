<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NeoHal.Desktop.App"
             xmlns:local="using:NeoHal.Desktop"
             RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        <StyleInclude Source="/Styles/NeoHalTheme.axaml"/>
    </Application.Styles>
    
    <Application.Resources>
        <FontFamily x:Key="InterFont">avares://Avalonia.Fonts.Inter/Assets#Inter</FontFamily>

        <!-- Global Renk KaynaklarÄ± (Deep Blue & Emerald Green Theme) -->
        
        <!-- Primary: Deep Blue (Professional, Trust) -->
        <Color x:Key="PrimaryColor">#0F172A</Color> <!-- Slate 900 -->
        <Color x:Key="PrimaryLightColor">#1E293B</Color> <!-- Slate 800 -->
        <Color x:Key="PrimaryDarkColor">#020617</Color> <!-- Slate 950 -->
        <Color x:Key="PrimaryAccentColor">#2563EB</Color> <!-- Blue 600 (Darker for contrast) -->

        <!-- Secondary: Emerald Green (Freshness, Market) -->
        <Color x:Key="SecondaryColor">#059669</Color> <!-- Emerald 600 (Darker for contrast) -->
        <Color x:Key="SecondaryLightColor">#10B981</Color> <!-- Emerald 500 -->
        <Color x:Key="SecondaryDarkColor">#047857</Color> <!-- Emerald 700 -->

        <!-- Backgrounds (High Contrast Light Mode) -->
        <Color x:Key="BackgroundDarkColor">#FFFFFF</Color> <!-- Pure White -->
        <Color x:Key="BackgroundMediumColor">#F1F5F9</Color> <!-- Slate 100 -->
        <Color x:Key="BackgroundLightColor">#E2E8F0</Color> <!-- Slate 200 -->
        <Color x:Key="BackgroundCardColor">#FFFFFF</Color> <!-- White Cards -->
        
        <!-- Text (High Contrast) -->
        <Color x:Key="TextPrimaryColor">#000000</Color> <!-- Pure Black -->
        <Color x:Key="TextSecondaryColor">#334155</Color> <!-- Slate 700 -->
        <Color x:Key="TextMutedColor">#64748B</Color> <!-- Slate 500 -->

        <!-- Status -->
        <Color x:Key="SuccessColor">#10B981</Color> <!-- Emerald 500 -->
        <Color x:Key="WarningColor">#F59E0B</Color> <!-- Amber 500 -->
        <Color x:Key="ErrorColor">#EF4444</Color> <!-- Red 500 -->
        <Color x:Key="InfoColor">#3B82F6</Color> <!-- Blue 500 -->
        
        <!-- Brushes -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
        <SolidColorBrush x:Key="PrimaryAccentBrush" Color="{StaticResource PrimaryAccentColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDarkColor}"/>
        <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMediumColor}"/>
        <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLightColor}"/>
        <SolidColorBrush x:Key="BackgroundCardBrush" Color="{StaticResource BackgroundCardColor}"/>
        
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>
        
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
        <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    </Application.Resources>
</Application>
