                    <!-- Bakiye KartlarÄ± -->
                    <Border Grid.Column="1" Background="{DynamicResource ErrorBrush}" CornerRadius="8" Padding="15,10" Margin="10,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="BORÃ‡" Foreground="#ffcdd2" FontSize="10"/>
                            <TextBlock Text="{Binding ToplamBorc, StringFormat=â‚º{0:N2}}" 
                                       FontSize="18" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="2" Background="{DynamicResource SuccessBrush}" CornerRadius="8" Padding="15,10" Margin="10,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ALACAK" Foreground="#c8e6c9" FontSize="10"/>
                            <TextBlock Text="{Binding ToplamAlacak, StringFormat=â‚º{0:N2}}" 
                                       FontSize="18" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="3" Background="{DynamicResource PrimaryBrush}" CornerRadius="8" Padding="20,10" Margin="10,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="BAKÄ°YE" Foreground="#bbdefb" FontSize="10"/>
                            <TextBlock Text="{Binding Bakiye, StringFormat=â‚º{0:N2}}" 
                                       FontSize="22" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <Button Grid.Column="4" Content="ðŸ”„" 
                            Command="{Binding YenileCommand}"
                            Padding="10" VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- HÄ±zlÄ± Tahsilat ButonlarÄ± -->
            <Border Grid.Row="1" Background="{DynamicResource BackgroundDarkBrush}" Padding="15,10"
                    IsVisible="{Binding SelectedSube, Converter={x:Static ObjectConverters.IsNotNull}}">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Content="ðŸ’µ Nakit Tahsilat" 
                            Command="{Binding HizliNakitTahsilatCommand}"
                            Background="#4CAF50" Foreground="White"
                            Padding="20,10" FontWeight="SemiBold"/>
                    <Button Content="ðŸ“‹ Ã‡ek Tahsilat" 
                            Command="{Binding HizliCekTahsilatCommand}"
                            Background="{DynamicResource WarningBrush}" Foreground="White"
                            Padding="20,10" FontWeight="SemiBold"/>
                    <Button Content="ðŸ¦ Havale/EFT" 
                            Command="{Binding HizliHavaleTahsilatCommand}"
                            Background="#2196F3" Foreground="White"
                            Padding="20,10" FontWeight="SemiBold"/>
                    <Button Content="âž• Yeni Tahsilat" 
                            Command="{Binding YeniTahsilatCommand}"
                            Background="#9C27B0" Foreground="White"
                            Padding="20,10" FontWeight="SemiBold"/>
                    
                    <Panel Width="1"/>
                    
                    <!-- Tarih Filtresi -->
                    <TextBlock Text="Tarih:" VerticalAlignment="Center" Foreground="Gray" Margin="20,0,5,0"/>
                    <DatePicker SelectedDate="{Binding FiltreBaslangic}" Width="180"/>
                    <TextBlock Text="-" VerticalAlignment="Center" Foreground="Gray"/>
                    <DatePicker SelectedDate="{Binding FiltreBitis}" Width="180"/>
                </StackPanel>
            </Border>
            
            <!-- Tahsilat GeÃ§miÅŸi Listesi -->
            <Grid Grid.Row="2" RowDefinitions="Auto,*" Margin="15"
                  IsVisible="{Binding SelectedSube, Converter={x:Static ObjectConverters.IsNotNull}}">
                <TextBlock Grid.Row="0" Text="ðŸ“œ Tahsilat GeÃ§miÅŸi" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding TahsilatGecmisi}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="1"
                          BorderBrush="#333"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tarih" Binding="{Binding Tarih, StringFormat=dd.MM.yyyy}" Width="100" MinWidth="80"/>
                        <DataGridTextColumn Header="Saat" Binding="{Binding Tarih, StringFormat=HH:mm}" Width="60" MinWidth="50"/>
                        <DataGridTemplateColumn Header="TÃ¼r" Width="80" MinWidth="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Padding="5,2" CornerRadius="3" HorizontalAlignment="Center"
                                            Background="{Binding HareketTipi, Converter={x:Static ObjectConverters.IsNotNull}}">
                                        <TextBlock Text="{Binding HareketTipi}" FontSize="11"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="AÃ§Ä±klama" Binding="{Binding Aciklama}" Width="200" MinWidth="100"/>
                        <DataGridTextColumn Header="Tutar" Binding="{Binding Tutar, StringFormat=â‚º{0:N2}}" Width="120" MinWidth="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            
            <!-- Åžube SeÃ§ilmedi MesajÄ± -->
            <StackPanel Grid.Row="2" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        IsVisible="{Binding SelectedSube, Converter={x:Static ObjectConverters.IsNull}}">
                <TextBlock Text="ðŸ‘ˆ" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                <TextBlock Text="Åžube seÃ§erek tahsilat iÅŸlemi yapabilirsiniz" 
                           FontSize="16" Foreground="Gray" Margin="0,10,0,0"/>
            </StackPanel>
            
            <!-- Alt Bar: Durum -->
            <Border Grid.Row="3" Background="{DynamicResource BackgroundMediumBrush}" Padding="15,10">
                <TextBlock Text="{Binding StatusMessage}" Foreground="#888"/>
            </Border>
        </Grid>
        
        <!-- TAHSÄ°LAT DÄ°ALOG -->
        <Border Grid.ColumnSpan="2" 
                Background="#80000000" 
                IsVisible="{Binding TahsilatDialogAcik}">
            <Border Background="{DynamicResource BackgroundMediumBrush}" 
                    CornerRadius="10" 
                    Width="500" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="25">
                <StackPanel Spacing="15">
                    <!-- Header -->
                    <StackPanel>
                        <TextBlock Text="ðŸ’° TAHSÄ°LAT GÄ°RÄ°ÅžÄ°" FontSize="18" FontWeight="Bold" Foreground="#4CAF50"/>
                        <TextBlock Text="{Binding SelectedSube.Unvan}" FontSize="14" Foreground="Gray"/>
                    </StackPanel>
                    
                    <!-- Tarih -->
                    <StackPanel>
                        <TextBlock Text="Tarih" Foreground="Gray" FontSize="11"/>
                        <DatePicker SelectedDate="{Binding TahsilatTarihi}" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    
                    <!-- Ã–deme TÃ¼rÃ¼ -->
                    <StackPanel>
                        <TextBlock Text="Ã–deme TÃ¼rÃ¼" Foreground="Gray" FontSize="11"/>
                        <ComboBox ItemsSource="{Binding OdemeTurleri}"
                                  SelectedItem="{Binding SelectedOdemeTuru}"
                                  HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    
                    <!-- Tutar -->
                    <StackPanel>
                        <TextBlock Text="Tutar (â‚º)" Foreground="Gray" FontSize="11"/>
                        <NumericUpDown Value="{Binding TahsilatTutari}" 
                                       Minimum="0" 
                                       Maximum="99999999"
                                       FormatString="N2"
                                       Increment="100"/>
                    </StackPanel>
                    
                    <!-- Ã‡ek Bilgileri (Ã‡ek seÃ§iliyse) -->
                    <StackPanel IsVisible="{Binding SelectedOdemeTuru, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Spacing="10">
                        <Border Background="#333" CornerRadius="5" Padding="15" 
                                IsVisible="{Binding SelectedOdemeTuru, FallbackValue=False}">
                            <StackPanel Spacing="10">
                                <TextBlock Text="ðŸ“‹ Ã‡ek Bilgileri" FontWeight="SemiBold" Foreground="#FF9800"/>
                                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,5,0">
                                        <TextBlock Text="Ã‡ek No" Foreground="Gray" FontSize="11"/>
                                        <TextBox Text="{Binding CekNo}" Watermark="Ã‡ek numarasÄ±"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="5,0,0,0">
                                        <TextBlock Text="Banka" Foreground="Gray" FontSize="11"/>
                                        <TextBox Text="{Binding CekBanka}" Watermark="Banka adÄ±"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,0">
                                        <TextBlock Text="Vade Tarihi" Foreground="Gray" FontSize="11"/>
                                        <DatePicker SelectedDate="{Binding CekVadeTarihi}" HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- AÃ§Ä±klama -->
                    <StackPanel>
                        <TextBlock Text="AÃ§Ä±klama" Foreground="Gray" FontSize="11"/>
                        <TextBox Text="{Binding TahsilatAciklama}" 
                                 Watermark="Opsiyonel aÃ§Ä±klama..."
