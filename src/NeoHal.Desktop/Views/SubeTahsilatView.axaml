                    </StackPanel>
                    
                    <!-- Mevcut Bakiye Bilgisi -->
                    <Border Background="{DynamicResource BackgroundDarkBrush}" CornerRadius="5" Padding="15">
                        <Grid ColumnDefinitions="*,*">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Mevcut Bakiye" Foreground="Gray" FontSize="11"/>
                                <TextBlock Text="{Binding Bakiye, StringFormat=â‚º{0:N2}}" 
                                           FontSize="16" FontWeight="Bold" Foreground="#f44336"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="Tahsilat SonrasÄ±" Foreground="Gray" FontSize="11"/>
                                <TextBlock FontSize="16" FontWeight="Bold" Foreground="#4CAF50">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="â‚º{0:N2}">
                                            <Binding Path="Bakiye"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Butonlar -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
                        <Button Content="Ä°ptal" 
                                Command="{Binding TahsilatIptalCommand}"
                                Padding="25,10"/>
                        <Button Content="âœ“ Tahsilat Kaydet" 
                                Command="{Binding TahsilatKaydetCommand}"
                                Background="#4CAF50"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="30,10"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
