<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NeoHal.Desktop.ViewModels"
             xmlns:m="using:NeoHal.Core.Entities"
             x:Class="NeoHal.Desktop.Views.KullaniciView"
             x:DataType="vm:KullaniciViewModel">
    
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- BaÅŸlÄ±k -->
        <Border Grid.Row="0" Background="{DynamicResource BackgroundDarkBrush}" Padding="20">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <TextBlock Text="ðŸ‘¥" FontSize="28"/>
                <StackPanel>
                    <TextBlock Text="KullanÄ±cÄ± YÃ¶netimi" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Sistem kullanÄ±cÄ±larÄ± ve yetkilendirme" FontSize="12" Foreground="#888"/>
                </StackPanel>
                <Button Content="ðŸ”„ Yenile" Command="{Binding YenileCommand}" 
                        Background="#333" Margin="20,0,0,0" Padding="10,5"/>
                <Button Content="âž• Yeni KullanÄ±cÄ±" Command="{Binding YeniKullaniciCommand}" 
                        Background="{DynamicResource SuccessBrush}" Foreground="White" Padding="10,5" FontWeight="Bold"/>
            </StackPanel>
        </Border>
        
        <!-- Ana Ä°Ã§erik -->
        <Grid Grid.Row="1" ColumnDefinitions="*,350" Margin="10">
            <!-- KullanÄ±cÄ± Listesi -->
            <Border Grid.Column="0" Background="{DynamicResource BackgroundDarkBrush}" CornerRadius="8" Padding="10" Margin="0,0,10,0">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="KullanÄ±cÄ±lar" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Kullanicilar}"
                              SelectedItem="{Binding SelectedKullanici}"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              IsReadOnly="True"
                              Background="Transparent"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="KullanÄ±cÄ± AdÄ±" Binding="{Binding KullaniciAdi}" Width="150" MinWidth="110"/>
                            <DataGridTextColumn Header="Ad Soyad" Binding="{Binding AdSoyad}" Width="200" MinWidth="120"/>
                            <DataGridTextColumn Header="Rol" Binding="{Binding Rol}" Width="100" MinWidth="60"/>
                            <DataGridTemplateColumn Header="Durum" Width="80" MinWidth="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate x:DataType="m:Kullanici">
                                        <StackPanel>
                                            <Border CornerRadius="4" Padding="5,2" HorizontalAlignment="Left"
                                                    Background="#66bb6a" IsVisible="{Binding Aktif}">
                                                <TextBlock Text="Aktif" FontSize="11" Foreground="White"/>
                                            </Border>
                                            <Border CornerRadius="4" Padding="5,2" HorizontalAlignment="Left"
                                                    Background="#ef5350" IsVisible="{Binding !Aktif}">
                                                <TextBlock Text="Pasif" FontSize="11" Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Son GiriÅŸ" Binding="{Binding SonGirisTarihi, StringFormat=dd.MM.yyyy HH:mm}" Width="150" MinWidth="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Detay Paneli -->
            <Border Grid.Column="1" Background="{DynamicResource BackgroundMediumBrush}" CornerRadius="8" Padding="15"
                    IsVisible="{Binding SelectedKullanici, Converter={x:Static ObjectConverters.IsNotNull}}">
                <ScrollViewer>
                    <StackPanel Spacing="15">
                        <TextBlock Text="KullanÄ±cÄ± DetaylarÄ±" FontSize="16" FontWeight="SemiBold"/>
                        
                        <!-- Bilgiler -->
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="120,*">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="KullanÄ±cÄ± AdÄ±:" Foreground="#888"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedKullanici.KullaniciAdi}" FontWeight="Bold"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Ad Soyad:" Foreground="#888" Margin="0,10,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedKullanici.AdSoyad}" Margin="0,10,0,0"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Rol:" Foreground="#888" Margin="0,10,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedKullanici.Rol}" Margin="0,10,0,0"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Durum:" Foreground="#888" Margin="0,10,0,0"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock Text="Aktif" IsVisible="{Binding SelectedKullanici.Aktif}" Foreground="#66bb6a"/>
                                <TextBlock Text="Pasif" IsVisible="{Binding !SelectedKullanici.Aktif}" Foreground="#ef5350"/>
                            </StackPanel>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Son GiriÅŸ:" Foreground="#888" Margin="0,10,0,0"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" 
                                       Text="{Binding SelectedKullanici.SonGirisTarihi, StringFormat=dd.MM.yyyy HH:mm}" 
                                       Margin="0,10,0,0"/>
                        </Grid>
                        
                        <Separator Background="#444" Margin="0,10"/>
                        
                        <!-- Aksiyonlar -->
                        <TextBlock Text="Ä°ÅŸlemler" FontSize="14" FontWeight="SemiBold"/>
                        <StackPanel Spacing="8">
                            <Button Content="âœï¸ DÃ¼zenle" Command="{Binding DuzenleCommand}" 
                                    HorizontalAlignment="Stretch" Background="{DynamicResource InfoBrush}" Foreground="White"/>
                            <Button Content="ðŸ”‘ Åžifre DeÄŸiÅŸtir" Command="{Binding SifreDegistirDialogAcCommand}" 
                                    HorizontalAlignment="Stretch" Background="#ffa726" Foreground="White"/>
                            <Button Content="ðŸ”„ AktifliÄŸi DeÄŸiÅŸtir" Command="{Binding AktiflikDegistirCommand}" 
                                    HorizontalAlignment="Stretch" Background="#666"/>
                            <Button Content="ðŸ—‘ï¸ Sil" Command="{Binding SilCommand}" 
                                    HorizontalAlignment="Stretch" Background="#d32f2f" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Durum Ã‡ubuÄŸu -->
        <Border Grid.Row="2" Background="{DynamicResource BackgroundDarkBrush}" Padding="15,10">
            <Grid ColumnDefinitions="Auto,*">
                <ProgressBar Grid.Column="0" IsIndeterminate="True" 
                             IsVisible="{Binding IsLoading}" Width="100" Margin="0,0,15,0"/>
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" 
                           Foreground="#ccc" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Yeni/DÃ¼zenle Dialog (Overlay) -->
        <Border Grid.RowSpan="3" Background="#80000000" IsVisible="{Binding DialogAcik}">
            <Border Background="{DynamicResource BackgroundMediumBrush}" CornerRadius="12" Padding="25" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    MinWidth="500" MaxWidth="600">
                <StackPanel Spacing="15">
                    <StackPanel>
                        <TextBlock Text="Yeni KullanÄ±cÄ±" FontSize="18" FontWeight="Bold" IsVisible="{Binding YeniKayit}"/>
                        <TextBlock Text="KullanÄ±cÄ± DÃ¼zenle" FontSize="18" FontWeight="Bold" IsVisible="{Binding !YeniKayit}"/>
                    </StackPanel>
                    
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="120,*">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="KullanÄ±cÄ± AdÄ±:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding DialogKullaniciAdi}" 
                                 IsEnabled="{Binding YeniKayit}"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Åžifre:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DialogSifre}" 
                                 PasswordChar="*" Margin="0,10,0,0"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Ad Soyad:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DialogAdSoyad}" Margin="0,10,0,0"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Rol:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Roller}" 
                                  SelectedItem="{Binding DialogRol}" Margin="0,10,0,0"/>
                    </Grid>
                    
                    <Separator Background="#444"/>
                    
                    <!-- Yetkiler -->
                    <TextBlock Text="Yetkiler" FontWeight="SemiBold"/>
                    <ScrollViewer Height="200">
                        <ItemsControl ItemsSource="{Binding TumYetkiler}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:YetkiItem">
                                    <CheckBox Content="{Binding Aciklama}" 
                                              IsChecked="{Binding Secili}"
                                              Margin="5" MinWidth="180"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                        <Button Content="Ä°ptal" Command="{Binding DialogKapatCommand}" 
                                Background="#666" Padding="20,10"/>
                        <Button Content="Kaydet" Command="{Binding KaydetCommand}" 
                                Background="{DynamicResource SuccessBrush}" Foreground="White" Padding="20,10"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
        
        <!-- Åžifre DeÄŸiÅŸtir Dialog (Overlay) -->
        <Border Grid.RowSpan="3" Background="#80000000" IsVisible="{Binding SifreDialogAcik}">
            <Border Background="{DynamicResource BackgroundMediumBrush}" CornerRadius="12" Padding="25" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    MinWidth="400">
                <StackPanel Spacing="15">
                    <TextBlock Text="Åžifre DeÄŸiÅŸtir" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedKullanici.KullaniciAdi, StringFormat='KullanÄ±cÄ±: {0}'}" 
                               Foreground="#888"/>
                    
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="120,*">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Yeni Åžifre:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding YeniSifre}" PasswordChar="*"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Tekrar:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding YeniSifreTekrar}" 
                                 PasswordChar="*" Margin="0,10,0,0"/>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                        <Button Content="Ä°ptal" Command="{Binding DialogKapatCommand}" 
                                Background="#666" Padding="20,10"/>
                        <Button Content="DeÄŸiÅŸtir" Command="{Binding SifreDegistirCommand}" 
                                Background="#ffa726" Foreground="White" Padding="20,10"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
