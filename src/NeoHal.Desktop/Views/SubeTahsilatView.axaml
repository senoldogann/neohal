    <Grid ColumnDefinitions="300,*">
        
        <!-- Sol Panel: Åžube Listesi -->
        <Border Grid.Column="0" Background="{DynamicResource BackgroundMediumBrush}" BorderBrush="#333" BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,*">
                <!-- BaÅŸlÄ±k -->
                <Border Grid.Row="0" Background="{DynamicResource BackgroundMediumBrush}" Padding="15">
                    <StackPanel>
                        <TextBlock Text="ðŸª ÅžUBELER" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Subeler.Count, StringFormat='{}{0} ÅŸube'}" 
                                   Foreground="Gray" FontSize="11" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Åžube Listesi -->
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding Subeler}"
                         SelectedItem="{Binding SelectedSube}"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="m:CariHesap">
                            <Border Padding="10,8" Margin="2">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Unvan}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Kod}" Foreground="Gray" FontSize="11"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding RiskLimiti, StringFormat='{}{0:N0}â‚º'}"
                                               Foreground="#888" FontSize="11" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
        
        <!-- SaÄŸ Panel: Tahsilat DetaylarÄ± -->
        <Grid Grid.Column="1" RowDefinitions="Auto,Auto,*,Auto">
            
            <!-- Ãœst Bar: Åžube Bilgisi ve Bakiye -->
            <Border Grid.Row="0" Background="{DynamicResource BackgroundMediumBrush}" Padding="20,15"
                    IsVisible="{Binding SelectedSube, Converter={x:Static ObjectConverters.IsNotNull}}">
                <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding SelectedSube.Unvan}" FontSize="20" FontWeight="Bold"/>
